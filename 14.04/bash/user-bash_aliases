# ~/.bash_aliases pour les utilisateurs

# Quelques alias
alias ll='ls -al'
alias ..='cd ..'
alias ...='cd ../..'
alias cp='cp -i'
alias rm='rm -i'
alias mv='mv -i'
alias vi='vim'

# Invite de commandes personnalisée
VERT='\[\033[0;32m\]'
BLANC='\[\033[1;37m\]'
NC='\[\033[0m\]'
PS1="$VERT[$BLANC\u$NC@$BLANC\h$NC:$BLANC\W$VERT] \$ $NC"

# Vim est l'éditeur par défaut
EDITOR=vim
VISUAL=$EDITOR
export EDITOR VISUAL


